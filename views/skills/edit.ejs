<%- include('../partials/nav') %>

<h1>Edit Skill</h1>
<form action="/skills/<%= skill.id %>/?_method=PUT" method="post" autocomplete="off">
  <label for="name">Skill:</label>
  <input id="name" name="name" value="<%= skill.name %>">
  <label for="type">Type Of Skill:</label>
  <input id="type" name="type" value="<%= skill.type %>">
  <label for="years">Years Of Experience:</label>
  <input id="years" name="years" value="<%= skill.years %>">
  <input type="hidden" value="<%= skill.id %>">
  <button class="submit" class="btn btn-primary">Update Skill</button>
</form>

