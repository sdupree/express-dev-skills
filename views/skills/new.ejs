<%- include('../partials/head') %>
<%- include('../partials/nav') %>

<h1>New Skill</h1>
<form action="/skills" method="post" autocomplete="off">
  <div class="mb-3">
    <label for="name" class="form-label">Skill Name:</label>
    <input type="text" class="form-control" id="name" name="name" placeholder="Name your skill...">
    <br>
    <label for="type">Type Of Skill:</label>
    <select class="form-select" name="type">
      <option selected>Select...</option>
      <% skillTypes.forEach(function(skillType) { %>
        <option><%= skillType %></option>
      <% }); %>
    </select>
    <br>
    <label for="years" class="form-label">Years Of Experience:</label>
    <select class="form-select" name="years">
      <% for(let i = 0; i < 43; i++) { %>
        <option><%= i %></option>
      <% } %>
    </select>
    <br>
    <button type="submit" class="btn btn-primary">Add New Skill</button>
  </div>
</form>

<%- include('../partials/foot') %>
